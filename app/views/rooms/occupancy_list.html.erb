<!-- START CONTENT -->
<section class="container clearfix">
  <!-- Page Title -->
  <header class="container page_info clearfix">
    <h1 class="regular brown bottom_line" id="no_print">Settings</h1>
    <div class="clear"></div>
  </header>
  <!-- /Page Title -->

  <div class="col_1_4" id="no_print">
    <%= render :partial => '/shared/menu_sidebar' %>
  </div>
  
  <div class="col_3_4 last">
    <!--h3 class="red">Settings</h3-->
    
    <h3>Occupancy List</h3>

    <table id="borders">
      <thead>
        <th>Room No</th>
        <th>Occupants</th>
        <th>Start Date</th>
      </thead>
      <tbody>
        <%# do not duplicate room nos if same %>
        <% room_no = 0 %>
        
        <% @rooms.each do |room| %>
          <tr>
            <td class="ten center"><%= room.room_no if room.id != room_no %></td>
            <td class="seventy">
              <%= room.occupant_or_vacant %>
            </td>
            <td class="twenty" class="center"><%= room.start_date %></td>
          </tr>  
          <% room_no = room.id %>
        <% end %>
      </tbody>
    </table>

    <div id="no_print">
      <%= link_to 'PRINT', occupancy_list_rooms_url(:format => :pdf) %>
    </div>
    
    <div class="clear padding15"></div>
    
  </div>
        
  <div class="clear padding15"></div>
</section>  