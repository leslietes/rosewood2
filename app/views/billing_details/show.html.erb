<!-- START CONTENT -->
<section class="container clearfix">
  <!-- Page Title -->
  <header class="container page_info clearfix no_print">
    <h1 class="regular brown bottom_line">Settings</h1>
    <div class="clear"></div>
  </header>
  <!-- /Page Title -->

  <div class="col_1_4 no_print">
    <%= render :partial => '/shared/menu_sidebar' %>
  </div>

  <div class="col_3_4 last">
    <!--h3 class="red">Settings</h3-->

    <h3 class="no_print">Billing Statement</h3>

    <p id="notice"><%= notice %></p>

   <div class="clear padding20"></div>

   <% room_no = 0 %>

   <div class="billing_statement">

      <%= render partial: 'occupants', locals: { billing: @billing, detail: @billing_detail.first, occupants: @billing_detail.first.occupants } %>

      <%= render partial: 'utilities', locals: { billing_utilities: @billing_detail.first.billing_utilities} %>

      <div class="clear padding15"></div>

      <table class="print_footer no_border">
        <thead></thead>
        <tbody>
        <tr>
          <td>Received by:</td>
          <td>&nbsp;</td>
          <td>Date received:</td>
        </tr>
        <tr>
          <td class="center"><br/><br/><br/>____________________________________</td>
          <td>&nbsp;</td>
          <td class="center"><br/><br/><br/>____________________________________</td>
        </tr>
        <tr>
          <td class="center">Signature Over Printed Name</td>
          <td>&nbsp;</td>
          <td class="center"></td>
        </tr></tbody>
      </table>

    </div>
  </div>
</section>
