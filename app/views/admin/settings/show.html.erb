<!-- START CONTENT -->
<section class="container clearfix">
  <!-- Page Title -->
  <header class="container page_info clearfix">
    <h1 class="regular brown bottom_line">Admin</h1>
    <div class="clear"></div>
  </header>
  <!-- /Page Title -->

  <div class="col_1_4">
    <%#= render :partial => 'menu_sidebar' %>
  </div>
  
  <div class="col_3_4 last">
    <h3 class="red">Settings</h3>

    <p id="notice"><%= notice %></p>
    
    <p>
      <%= label_tag :about_us %><%= @setting.about_us %>
    </p>
    
    <p>
      <%= label_tag :description %><%= @setting.page_description %>
    </p>
    
    <p>
      <%= label_tag :address %><%= @setting.address %>
    </p>
    
    <p>
      <%= label_tag :phone %><%= @setting.phone %>
    </p>
    
    <p>
      <%= label_tag :mobile %><%= @setting.mobile %>
    </p>
    
    <p>
      <%= label_tag :email %><%= @setting.email %>
    </p>
        
    <span>
      <%= label_tag :photo_one %><br/>
      <figure><%= image_tag @setting.photo1.url(:small) %></figure>
      <figcaption><%= @setting.photo1_caption %></figcaption>      
    </span>
    
    <span>
      <%= label_tag :photo_two %><br/>
      <figure><%= image_tag @setting.photo2.url(:small) %></figure>
      <figcaption><%= @setting.photo2_caption %></figcaption>      
    </span>
    
    <span>
      <%= label_tag :photo_three %><br/>
      <figure><%= image_tag @setting.photo3.url(:small) %></figure>
      <figcaption><%= @setting.photo3_caption %></figcaption>      
    </span>
    
    <span>
      <%= label_tag :photo_four %><br/>
      <figure><%= image_tag @setting.photo4.url(:small) %></figure>
      <figcaption><%= @setting.photo4_caption %></figcaption>      
    </span>
    
    <span>
      <%= label_tag :photo_five %><br/>
      <figure><%= image_tag @setting.photo5.url(:small) %></figure>
      <figcaption><%= @setting.photo5_caption %></figcaption>      
    </span>
    
    <br/>

    <%= link_to 'Edit', edit_admin_setting_path(@setting) %> |
    <%= link_to 'Back', admin_setting_path %>

  </div>
        
  <div class="clear padding15"></div>
</section>