<!-- START CONTENT -->
<section class="container clearfix">
  <!-- Page Title -->
  <header class="container page_info clearfix">
    <h1 class="regular brown bottom_line">Settings</h1>
    <div class="clear"></div>
  </header>
  <!-- /Page Title -->

  <div class="col_1_4">
    <%= render :partial => '/shared/menu_sidebar' %>
  </div>
  
  <div class="col_3_4 last">
    <!--h3 class="red">Settings</h3-->
    
    <h3>Reservation</h3>

    <p id="notice"><%= notice %></p>
    
    <p>
      <%= label_tag :room_no %>
      <%= @room.room_no %>
    </p>
    
    <p>
      <%= label_tag :name %>
      <%= @reservation.name %>
    </p>
    
    <p>
      <%= label_tag :movein_date %>
      <%= @reservation.movein_date%>
    </p>
    
    <p>
      <span><i>Last updated at <%= @reservation.updated_at %> by <%= User.last_user(@reservation.user_id) %></i></span>
    </p>
    
    <div>
      <%= link_to 'Edit', edit_room_reservation_url(@room.id,@reservation.id), class: "styled_links" %>
      <%= link_to 'Destroy', room_reservation_url(@room.id, @reservation.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "styled_links" %>
      <%= link_to 'Back', checkins_url, class: "styled_links" %>
    </div>
    
    
    <div class="clear padding15"></div>
    
  </div>
        
  <div class="clear padding15"></div>
</section>  